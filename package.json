{
  "name": "harmonic-halo",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "author": "KONTA",
  "description": "KONTA Accounting App",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "build:desktop": "cross-env NEXT_PUBLIC_IS_DESKTOP=true next build && electron-builder",
    "dev:electron": "cross-env NEXT_PUBLIC_IS_DESKTOP=true next dev"
  },
  "devDependencies": {
    "@supabase/auth-helpers-nextjs": "^0.15.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.68.0",
    "react-to-print": "^3.2.0",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "app-builder-bin": "^4.2.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "overrides": {
    "app-builder-bin": "$app-builder-bin"
  },
  "build": {
    "appId": "com.konta.app",
    "productName": "KONTA",
    "win": {
      "target": "nsis",
      "forceCodeSigning": false
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}